<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Tasky - {% block title %}{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <div class="container mt-5">
            <div class="d-flex justify-content-between mb-5">
                <a onclick="window.location.href = '{{ path('app_index') }}'"><h1 class="h3 mb-3 font-weight-normal logo">Tasky</h1></a>
                {% if app.user %}
                    <button class="btn btn-danger" onclick="window.location.href = '{{ path('app_logout') }}'">Wyloguj</button>
                {% endif %}
            </div>
            {% block container %}
            {% endblock %}
        </div>

        {% block body %}
        {% endblock %}

        <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>

        <footer class="container mt-5">
            <p>Strona stworzona przez eastcause!</p>
        </footer>
    </body>

</html>
